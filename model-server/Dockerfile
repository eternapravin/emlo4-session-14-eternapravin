FROM python:3.12-slim

# Set working directory
WORKDIR /workspace

ENV PORT=8000

# Copy requirements first to leverage Docker cache
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Downloads mambaout_model.onnx (generated by mambaout_kobe.in1k model from assignment-10 code) of 31 MB from gdrive
# Mobilenet is also possible with 6 MB but accuracy is less than mambaout
RUN gdown 1HHSFrklRPpoHGlggmBkUSjSg4tCrNANY --output /workspace/mambaout_model.onnx

# Copy application code and model
COPY server.py .
COPY icons.py .

EXPOSE 8000

# Set command
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000"]

# CMD ["tail", "-f", "/dev/null"]